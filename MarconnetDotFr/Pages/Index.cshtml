@page
@model IndexModel
@{

}

<div class="website-intro">
    <p>
        Hello, my name is Benjamin Marconnet and I'm @Model.CurrentAge years old. I'm from France and I currently live in Geneva (Switzerland).
        I graduated from an engineering school a couple of years ago, where I studied software engineering.
        Since then, I mostly worked as a C#/.NET developer.
    </p>
    <p>
        My Github is <a href="https://github.com/chromimuk">here</a>, and my CV is avalaible <a href="~/pdf/EN___Resume_2021.pdf">as a PDF here</a>.
        You can contact me at <a href="mailto:benjamin@marconnet.fr">benjamin@marconnet.fr</a>.
        Thank you for visiting!
    </p>
</div>

<section>
    <div class="website-category">
        <h1>SIDE PROJECTS</h1>

        @foreach (var item in Model.PersonalWork)
        {
             <h2>@item.Key</h2>
            
             @foreach(var i in item)
             {
                <div class="homepage-item side-project-item">
                    <div class="side-project-item-content">
                        <div class="homepage-item-title">
                            <a asp-page="WorkExample" asp-route-title="@i.Alias">>> @i.Title</a>
                        </div>
                        <br />
                        <div style="width:100%" class="">
                            <span>@Html.Raw(@i.Description)</span>
                        </div>
                    </div>
                </div>
             }

        }
    </div>
</section>

<section>
    <div class="website-category">
        <h1>WORK EXPERIENCES</h1>

        @foreach (var exp in Model.WorkExperiences)
        {
            <div class="homepage-item">
                <div class="homepage-item-logo">
                    <img class="homepage-item-logo-img" data-src="@exp.Image" alt="">
                </div>
                <div class="homepage-item-details">
                    <div class="homepage-item-title workexp-item-company-info-name">@exp.Title</div>
                    <div class="homepage-item-location">@exp.Location</div>
                    <div class="homepage-item-details-note">
                        <span>@exp.Note</span>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<section>
    <div class="website-category">
        <h1>EDUCATION</h1>

        @foreach (var diploma in Model.UniversityDiplomas)
        {
            <div class="homepage-item">
                <div class="homepage-item-logo">
                    <img class="homepage-item-logo-img" data-src="@diploma.Image" alt="">
                </div>
                <div class="homepage-item-details">
                    <div class="homepage-item-title uni-item-title s-hidden">@diploma.Title</div>
                    <div class="homepage-item-title uni-item-title s-show">@diploma.ShortTitle</div>
                    <div class="homepage-item-location uni-location s-hidden">@diploma.Location</div>
                    <div class="homepage-item-location uni-location s-show">@diploma.ShortLocation</div>
                </div>
            </div>
        }
    </div>
</section>

