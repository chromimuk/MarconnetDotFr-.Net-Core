<script>
    $('#styleSelector').on('change', function () {
        var selectedStyle = this.value;
        $("img").each((_, v) => {
            $(v).removeClass();
            $(v).addClass("work-image-cover");
            $(v).addClass(selectedStyle);
        });
    });
</script>
